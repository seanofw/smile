Inline %URawType% IntSqrt(%URawType% value)
{
	%URawType% root, bit, trial;

	root = 0;

#if %numbits% == 64
	bit =
		(value >= 0x100000000UL) ? (1ULL << 62)
		: (value >= 0x10000UL) ? (1ULL << 30)
		: (1ULL << 14);
#elif %numbits% == 32
	bit = (value >= 0x10000U) ? (1U << 30) : (1U << 14);
#elif %numbits% == 16
	bit = (1U << 14);
#elif %numbits% == 8
	bit = (1U << 7);
#endif

	do {
		trial = root + bit;
		if (value >= trial) {
			value -= trial;
			root = trial + bit;
		}
		root >>= 1;
		bit >>= 2;
	} while (bit != 0);

	return root;
}

