/// <summary>
/// Deal with division-by-zero.
/// </summary>
/// <param name="param">A pointer to a MathInfo struct that describes how to handle divide-by-zero.</param>
/// <returns>0 if this is a quiet divide-by-zero, or a thrown exception if this is supposed to be an error.</returns>
Inline SmileArg DivideByZero(void *param)
{
	MathInfo mathInfo = (MathInfo)param;

	if (mathInfo->isLoud)
		Smile_ThrowException(Smile_KnownSymbols.native_method_error, _divideByZero);

	return SmileUnboxed%Type%_From(0);
}

/// <summary>
/// Perform division classic-C-style, which rounds towards zero no matter what the sign is.
/// </summary>
Inline %RawType% CDiv(%RawType% dividend, %RawType% divisor)
{
	if (dividend < 0) {
		if (divisor < 0)
			return (%RawType%)((%URawType%)-dividend / (%URawType%)-divisor);
		else
			return -(%RawType%)((%URawType%)-dividend / (%URawType%)divisor);
	}
	else if (divisor < 0)
		return -(%RawType%)((%URawType%)dividend / (%URawType%)-divisor);
	else
		return (%RawType%)((%URawType%)dividend / (%URawType%)divisor);
}

/// <summary>
/// Perform division like mathematicians expect, which rounds toward negative infinity (always).
/// </summary>
Inline %RawType% MathematiciansDiv(%RawType% dividend, %RawType% divisor)
{
	if (dividend < 0) {
		if (divisor < 0) {
			return (%RawType%)((%URawType%)-dividend / (%URawType%)-divisor);
		}
		else {
			%URawType% positiveQuotient = (%URawType%)-dividend / (%URawType%)divisor;
			%URawType% positiveRemainder = (%URawType%)-dividend % (%URawType%)divisor;
			return positiveRemainder == 0 ? -(%RawType%)positiveQuotient : -(%RawType%)positiveQuotient - 1;
		}
	}
	else if (divisor < 0) {
		%URawType% positiveQuotient = (%URawType%)dividend / (%URawType%)-divisor;
		%URawType% positiveRemainder = (%URawType%)dividend % (%URawType%)-divisor;
		return positiveRemainder == 0 ? -(%RawType%)positiveQuotient : -(%RawType%)positiveQuotient - 1;
	}
	else {
		return dividend / divisor;
	}
}

