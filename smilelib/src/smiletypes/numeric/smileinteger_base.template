SMILE_EXTERNAL_FUNCTION(Parity)
{
	%URawType% value = (%URawType%)argv[0].unboxed.%unboxed%;

#if %numbits% >= 64
	value ^= value >> 32;
#endif
#if %numbits% >= 32
	value ^= value >> 16;
#endif
#if %numbits% >= 16
	value ^= value >> 8;
#endif
#if %numbits% >= 8
	value ^= value >> 4;
#endif
	value &= 0xF;
	value = (0x6996 >> value) & 1;

