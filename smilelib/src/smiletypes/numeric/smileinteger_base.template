SMILE_EXTERNAL_FUNCTION(NextPow2)
{
	%RawType% value = (%RawType%)argv[0].unboxed.%unboxed%;
	%URawType% uvalue = (%URawType%)value;

	if (value < 0) return SmileUnboxed%Type%_From(0);
	if (value == 0) return SmileUnboxed%Type%_From(1);

	uvalue--;
	uvalue |= uvalue >> 1;
	uvalue |= uvalue >> 2;
	uvalue |= uvalue >> 4;
#if %numbits% >= 16
	uvalue |= uvalue >> 8;
#endif
#if %numbits% >= 32
	uvalue |= uvalue >> 16;
#endif
#if %numbits% >= 64
	uvalue |= uvalue >> 32;
#endif
	uvalue++;

	return SmileUnboxed%Type%_From(uvalue);
}

SMILE_EXTERNAL_FUNCTION(IntLg)
{
	%RawType% value = (%RawType%)argv[0].unboxed.%unboxed%;
	%URawType% uvalue = (%URawType%)value;
	%URawType% log;

	if (value <= 0) {
		MathInfo mathInfo = (MathInfo)param;
		if (mathInfo->isLoud)
			Smile_ThrowException(Smile_KnownSymbols.native_method_error, _negativeLog);
		return SmileUnboxed%Type%_From(0);
	}

	log = 0;
#if %numbits% >= 64
	if ((uvalue & 0xFFFFFFFF00000000) != 0) uvalue >>= 32, log += 32;
#endif
#if %numbits% >= 32
	if ((uvalue & 0x00000000FFFF0000) != 0) uvalue >>= 16, log += 16;
#endif
#if %numbits% >= 16
	if ((uvalue & 0x000000000000FF00) != 0) uvalue >>= 8, log += 8;
#endif
	if ((uvalue & 0x00000000000000F0) != 0) uvalue >>= 4, log += 4;
	if ((uvalue & 0x000000000000000C) != 0) uvalue >>= 2, log += 2;
	if ((uvalue & 0x0000000000000002) != 0) uvalue >>= 1, log += 1;

	return SmileUnboxed%Type%_From((%RawType%)log);
}

