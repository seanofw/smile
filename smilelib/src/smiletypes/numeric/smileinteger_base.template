Inline %RawType% IntPower(%RawType% value, %RawType% exponent)
{
	if (exponent < 0) return 0;

	%RawType% result = 1;

	while (exponent > 0) {
		if ((exponent & 1) != 0) {
			result *= value;
		}
		exponent >>= 1;
		value *= value;
	}

	return result;
}

